{% extends 'layout.twig' %}

{% block contents %}
    <h1>
        Login
    </h1>

    <form action="{{ url_for('login') }}" method="post">
        <div class="form-group">
            <label for="exampleInputUsername">E-mail</label>
            <input type="text" name="email" class="form-control" id="exampleInputUsername" placeholder="exemplo@email.com">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword">Senha</label>
            <input type="password" name="pswd" class="form-control" id="exampleInputPassword" placeholder="******">
        </div>
        <button type="submit" class="btn btn-primary">Acessar</button>
    </form>
{% endblock %}
